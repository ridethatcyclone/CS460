@model IEnumerable<HW6.Product>



<h1>@ViewBag.ItemName</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6"><h4>Description</h4>
        <p>@ViewBag.ItemDescription</p>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <ul class="list-group">
                <li class="list-group-item">Price: @ViewBag.ItemPrice.ToString("C2")</li>
                <li class="list-group-item">ProductID: @ViewBag.ItemID</li>
                @if (ViewBag.Color != null)
                {
                    <li class="list-group-item">Color: @ViewBag.ItemColor</li>
                }
                
            </ul>
        </div>
    </div><br /><br />
    <div class="row">
        <div style="margin-left:10px;">
            <h2>Reviews</h2>
        </div>
        <hr />
        <div class="reviews">
            @if (ViewBag.HasReviews)
            {

            }
            else
            {
                <p>No reviews for this product yet! Would you like to submit one?</p>
            }
            <button type="button" class="btn btn-primary btn-lg">Add a Review</button>
        </div>
    </div>
    <div class="row">

    </div>
</div>
